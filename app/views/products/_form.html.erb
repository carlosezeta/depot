<%= bootstrap_form_for @product, :html => { :class => 'form-horizontal' } do |f| %>

      <%= f.alert_message "Please fix the errors below." %>

      <%= f.text_field :title, :class => 'text_field' %>

      <%= f.text_area :description, :rows => 6, :class => 'text_area' %>

      <%= f.text_field :image_url, :class => 'text_field' %>

      <%= f.text_field :price, :class => 'text_field' %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                products_path, :class => 'btn' %>
  </div>
<% end %>
