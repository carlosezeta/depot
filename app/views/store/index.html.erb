    <% content_for :visitas do %>
        <div class="pull-right visitas">
            <% if session[:counter] > 5 %>
                <p>Nos has visitado <%= pluralize(session[:counter], 'vez', 'veces') %></p>
            <% end %>
        </div>
    <% end %>
	<div class="row">
	<% @products.each do |product| %>
  
        <div class="col-sm-4 col-lg-4 col-md-4 entry">
            <div class="thumbnail">
                
                <%= link_to image_tag(product.image_url, :class => 'list_image'), line_items_path(:product_id => product), :method => :post %>

                <div class="caption">
                    <h4 class="pull-right price"><%= number_to_currency(product.price, :locale => 'es') %></h4>
                    <h4><%= link_to product.title, product_path(product) %></h4>
                    <p><%= truncate(strip_tags(product.description), :length => 200) %></p>
                </div>
                <div class="ratings">
                    <p class="pull-right">15 reviews</p>
                    <p>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                    </p>
                </div>
                <div class="boton-carrito">
                    <%= button_to 'AÃ±adir al carro', line_items_path(:product_id => product), :class => 'btn btn-primary' %>
                </div>
            </div>
        </div>

	<% end %>
